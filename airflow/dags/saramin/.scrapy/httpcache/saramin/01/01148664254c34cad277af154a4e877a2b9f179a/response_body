<script type="text/javascript">
    var i;

    var showQuickLogin = function () {
        if (window.top.Saramin && window.top.Saramin.showQuickLogin) {
            window.top.Saramin.showQuickLogin();
        }
    };

    window.onload = function () {
        var frames = document.getElementsByTagName("iframe");
        for (i = 0; i < frames.length; i++) {
            if(frames[i].src.indexOf('?') > -1) {
                frames[i].src = frames[i].src.replace('autoplay=1', 'autoplay=0');
                frames[i].src += '&wmode=transparent';
            } else {
                frames[i].src += '?wmode=transparent';
            }

        }
        var embedes = document.getElementsByTagName("embed");
        for (i = 0; i < embedes.length; i++) {
            embedes[i].wmode = 'transparent';
        }

        var aList = document.querySelectorAll('a,area');
        var aLength = aList.length;

        for (i = 0; i < aLength; i++) {
            var aLink = aList[i];
            var href = aLink.getAttribute('href') || '';

            if (href.indexOf('mailto:') !== -1 || href.indexOf('tel:') !== -1 || href.match('#(.*)') !== null) {
                continue;
            }

            aLink.setAttribute('target', '_blank');
        }

        var aTagList = document.querySelectorAll('a,area');
        for (i = 0; i < aTagList.length; i++ ){
            aTagList[i].addEventListener('mousedown', function (e) {
                var item = e.currentTarget;
                var href = item.getAttribute('href') || '';

                Saramin.checkUpdateHomepage(href);
            });
        }

        if (window.top.JobsView) {
            window.top.JobsView.revealMail(document.getElementsByClassName("enc_mail"));
        } else {
            window.top.revealMail(document.getElementsByClassName("enc_mail"))
        }

    };

    var Saramin = {};
    Saramin.checkUpdateHomepage = function(href) {
        var isFile = false,
            urlLastSpiceByDot = href.split('.').pop().toLowerCase(),
            fileExtWord = ['hwp', 'doc', 'docx', 'ppt', 'pptx', 'pdf', 'xls', 'xlsx', 'rtf', 'gul'],
            fileExtCompress = ['zip', 'alz', 'rar', 'lzh', 'arj', 'egg', 'tar', 'sit'],
            fileExtImageFlash = ['jpg', 'gif', 'png', 'psd', 'fla', 'ai', 'jpe', 'jpeg', 'tif', 'tiff', 'pcx', 'swf'],
            fileExt;

        fileExt = fileExtWord.concat(fileExtCompress).concat(fileExtImageFlash);
        isFile = (fileExt.indexOf(urlLastSpiceByDot) !== -1);

        if (href != '' && isFile === false && href.indexOf('mailto:') === -1
            && href.indexOf('pds.saramin.co.kr') === -1 && href.indexOf('uf.daum.net') === -1 && href.indexOf('drive.google.com') === -1
        ) {
            try {
                Saramin.updateHomepageLink('44870285', 'homepage');
            } catch (e) {}
        }
    };
    Saramin.updateHomepageLink = function(rec_idx, form_gb) {
        var i = new Image();
        i.src    = "/zf_user/track-apply-form/update-homepage-apply-form-cnt-ajax?rec_idx=" + rec_idx + "&form_gb=" + form_gb + '&t_category=relay_view&t_content=view_detail&t_ref=&t_ref_content=';
        i.onload = function () {};
    };


    /*
    isImgLoad = function (img) {
        if (!img.complete) {
            return false;
        }

        if (img.naturalWidth === 0) {
            return false;
        }

        return true;
    };

    setTimeout(function () {
        var tagList = document.querySelector(".user_content").querySelectorAll('img');
        var tagListLength = tagList.length;

        for (var i = 0; i < tagListLength; i++) {
            var item = tagList[i];
            if (!isImgLoad(item)) {
                item.setAttribute('src', '');
                item.parentElement.removeChild(item);

                if (document.execCommand) {
                    document.execCommand("Stop", false);
                }

                if (window.stop) {
                    window.stop();
                }
            }
        }
    }, 10000);
